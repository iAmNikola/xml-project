
import { Injectable } from '@angular/core';
import { HttpClient, HttpHeaders } from '@angular/common/http';
import * as JsonToXML from "js2xmlparser";

@Injectable()
export class PatentService {
  constructor(private http: HttpClient) { }

  url = "http/localhost:8080"

  public addZahtev(zahtev: JSON) {
    const xmlZahtev = JsonToXML.parse("zahtev_za_priznanje_patenta", zahtev);
    const xmlOdgovor = this.http.post(this.url + '/resenja-zahteva/add-resenje-zahteva', xmlZahtev, { headers: new HttpHeaders().set('Content-Type', 'application/xml'), responseType: 'text' });
    return xmlOdgovor;
  }
}